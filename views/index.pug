form(id="rsvp-form" action='/reply', method='POST')
 fieldset   
  label= 'Name'
  input(type='text', name='name', autofocus='')
  br
  label= 'Email'
  input(type='email', name='email')
  br
  label= 'Attending'
  input(id='attending', type='radio', name='attending', value=1)
  label(for='attending')= 'I’ll be there'
  input(id="not-attending" type='radio', name='attending', value=0)
  label(for='not-attending')= 'I can’t make it'
  br
  label= 'Number of guests'
   select#guest-select(name='guestSelect')
    option(value='1')= '1'
    option(value='2')= '2'
    option(value='3')= '3'
    option(value='4')= '4'
    option(value='5')= '5'
    option(value='6')= '6'
    option(value='7')= '7'
    option(value='8')= '8'
  button(type='submit')= 'Submit'